        DataType = ftString
        Precision = -1
        Size = 27
      end>
    Database = DataModuleApp.MySQL57Connection
    Transaction = DataModuleApp.sqlTransactionGeral
    SQL.Strings = (
      'select p.valor,'
      '       t.descricao,'
      '       case'
      '          when p.mes = 1 then ''janeiro'''
      '          when p.mes = 2 then ''fevereiro'''
      '          when p.mes = 3 then ''março'''
      '          when p.mes = 4 then ''abril'''
      '          when p.mes = 5 then ''maio'''
      '          when p.mes = 6 then ''junho'''
      '          when p.mes = 7 then ''julho'''
      '          when p.mes = 8 then ''agosto'''
      '          when p.mes = 9 then ''setembro'''
      '          when p.mes = 10 then ''outubro'''
      '          when p.mes = 11 then ''novembro'''
      '          when p.mes = 12 then ''dezembro'''
      '       end mes_pagamento'
      'from pagamento p'
      '  inner join turma t on (t.id = p.fk_turma_id)'
      'where p.id = :id'
      'order by p.mes'
    )
    Params = <    
      item
        DataType = ftLargeint
        Name = 'id'
        ParamType = ptInput
        Size = 8
      end>

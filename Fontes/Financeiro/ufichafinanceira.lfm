  object sqlAlunoPagamentos: TSQLQuery[6]
    IndexName = 'DEFAULT_ORDER'
    FieldDefs = <    
      item
        Name = 'valor'
        DataType = ftFloat
        Precision = -1
      end    
      item
        Name = 'descricao'
